<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qq315301615.android_study.animdemozs">

    <application
        android:name=".CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.MainActivity"
            android:icon="@drawable/ic_launcher"
            android:label="MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.CrossfadeActivity"
            android:parentActivityName=".ui.activity.MainActivity"
            android:icon="@mipmap/ic_launcher"
            android:label="CrossfadeActivity"
            android:uiOptions="splitActionBarWhenNarrow"></activity>
        <activity
            android:name=".ui.activity.CardFlipActivity"
            android:parentActivityName=".ui.activity.MainActivity"></activity>
        <activity
            android:name=".ui.activity.ScreenSlideActivity"
            android:parentActivityName=".ui.activity.MainActivity"
            android:uiOptions="splitActionBarWhenNarrow"></activity>
        <activity
            android:name=".ui.activity.ZoomActivity"
            android:parentActivityName=".ui.activity.MainActivity"></activity>
        <activity
            android:name=".ui.activity.LayoutChangesActivity"
            android:parentActivityName=".ui.activity.MainActivity"></activity>
    </application>

</manifest>
